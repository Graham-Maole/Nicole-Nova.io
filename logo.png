import React from 'react';

interface LogoProps {
  variant?: 'full' | 'icon' | 'stacked';
  size?: 'sm' | 'md' | 'lg' | 'xl';
  dark?: boolean;
  className?: string;
}

export function Logo({ 
  variant = 'full', 
  size = 'md', 
  dark = false,
  className = ''
}: LogoProps) {
  
  const sizeConfig = {
    sm: {
      icon: 24,
      text: 'text-base',
      gap: 'gap-2',
      tagline: 'text-[10px]'
    },
    md: {
      icon: 32,
      text: 'text-xl',
      gap: 'gap-3',
      tagline: 'text-xs'
    },
    lg: {
      icon: 48,
      text: 'text-3xl',
      gap: 'gap-4',
      tagline: 'text-sm'
    },
    xl: {
      icon: 64,
      text: 'text-5xl',
      gap: 'gap-5',
      tagline: 'text-base'
    }
  };

  const config = sizeConfig[size];
  const iconSize = config.icon;
  const primaryColor = dark ? '#ffffff' : '#0a0a0a';

  const LogoIconBest = () => (
    <svg 
      width={iconSize} 
      height={iconSize} 
      viewBox="0 0 64 64" 
      fill="none" 
      xmlns="http://www.w3.org/2000/svg"
      className="flex-shrink-0"
    >
      {/* Unified NN - blended together as one symbol */}
      {/* Left vertical bar */}
      <rect x="8" y="8" width="6" height="48" fill={primaryColor} rx="1"/>
      
      {/* Diagonal connecting bars that blend the two N's together */}
      <path 
        d="M14 8L14 16L34 40L34 48L40 48L40 40L60 16L60 8L54 8L40 26L40 8L34 8L34 26L20 8L14 8Z" 
        fill={primaryColor}
      />
      
      {/* Right vertical bars - creating the double N effect */}
      <rect x="34" y="16" width="6" height="40" fill={primaryColor} rx="1"/>
      <rect x="54" y="8" width="6" height="48" fill={primaryColor} rx="1"/>
      
      {/* Accent element - creates visual interest and unity */}
      <circle cx="32" cy="32" r="4" fill={primaryColor} fillOpacity="0.3"/>
    </svg>
  );

  const textColor = dark ? 'text-white' : 'text-neutral-900';
  const taglineColor = dark ? 'text-neutral-400' : 'text-neutral-600';

  if (variant === 'icon') {
    return (
      <div className={className}>
        <LogoIconBest />
      </div>
    );
  }

  if (variant === 'stacked') {
    return (
      <div className={`flex flex-col items-center gap-2 ${className}`}>
        <LogoIconBest />
        <div className="flex flex-col items-center">
          <span className={`${config.text} tracking-tight ${textColor}`} style={{ fontFamily: 'system-ui, -apple-system, sans-serif', fontWeight: 600 }}>
            Nicole Nova
          </span>
          <span className={`${config.tagline} tracking-wide ${taglineColor}`} style={{ fontFamily: 'system-ui, -apple-system, sans-serif', fontWeight: 400, marginTop: '2px' }}>
            DIGITAL STUDIO
          </span>
        </div>
      </div>
    );
  }

  // Full horizontal logo (PRIMARY)
  return (
    <div className={`flex items-center ${config.gap} ${className}`}>
      <LogoIconBest />
      <div className="flex flex-col justify-center">
        <span className={`${config.text} tracking-tight leading-none ${textColor}`} style={{ fontFamily: 'system-ui, -apple-system, sans-serif', fontWeight: 600 }}>
          Nicole Nova
        </span>
        <span className={`${config.tagline} tracking-wide ${taglineColor}`} style={{ fontFamily: 'system-ui, -apple-system, sans-serif', fontWeight: 400, marginTop: '2px' }}>
          DIGITAL STUDIO
        </span>
      </div>
    </div>
  );
}
